<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="XMLConfigTest" packages="org.vcell.*, cbit.*, org.restlet.*, org.apache.http, org.eclipse.jetty">
    <ThresholdFilter level="trace"/>

    <Appenders>
        <Console name="console">
            <PatternLayout pattern="%5p (%F:%L) - %m%n"/>
<!--            <PatternLayout pattern="%d %p %C{1.} [%t] %m%n"/>-->
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.vcell" level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="cbit" level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="cbit" level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.apache.http" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.eclipse.jetty" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name = "io.jhdf" level="warn" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>

</Configuration>
